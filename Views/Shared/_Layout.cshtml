<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - DentalClinic</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">DentalClinic</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <!-- HOME -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>

                    <!-- CLIENTES -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown">
                            Clientes
                        </a>
                        <ul class="dropdown-menu">

                            <li>
                                <a class="dropdown-item" asp-controller="Cliente" asp-action="Create">
                                    Crear cliente
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item" asp-controller="Cliente" asp-action="Index">
                                    Listar clientes
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item" asp-controller="Reserva" asp-action="Buscar">
                                    Buscar mis reservas
                                </a>
                            </li>

                        </ul>
                    </li>

                    <!-- SERVICIOS -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown">
                            Servicios
                        </a>
                        <ul class="dropdown-menu">

                            <li>
                                <a class="dropdown-item" asp-controller="Servicio" asp-action="Create">
                                    Crear servicio
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item" asp-controller="Servicio" asp-action="Index">
                                    Listar servicios
                                </a>
                            </li>

                        </ul>
                    </li>

                    <!-- QUEJAS -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown">
                            Quejas
                        </a>
                        <ul class="dropdown-menu">

                            <li>
                                <a class="dropdown-item" asp-controller="Queja" asp-action="Create">
                                    Crear queja
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item" asp-controller="Queja" asp-action="Index">
                                    Listar quejas
                                </a>
                            </li>

                        </ul>
                    </li>

                    <!-- ITEMS DE SERVICIO -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown">
                            Items de Servicio
                        </a>
                        <ul class="dropdown-menu">

                            <li>
                                <a class="dropdown-item" asp-controller="ItemServicio" asp-action="Create">
                                    Crear item de servicio
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item" asp-controller="ItemServicio" asp-action="Index">
                                    Listar items
                                </a>
                            </li>

                        </ul>
                    </li>

                    <!-- HORARIOS -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown">
                            Horarios
                        </a>
                        <ul class="dropdown-menu">

                            <li>
                                <a class="dropdown-item" asp-controller="HorarioAtencion" asp-action="Create">
                                    Crear horario
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item" asp-controller="HorarioAtencion" asp-action="Index">
                                    Listar horarios
                                </a>
                            </li>

                        </ul>
                    </li>

                    <!-- CONFIGURACIÓN EMPRESA -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown">
                            Configuración
                        </a>
                        <ul class="dropdown-menu">

                            <li>
                                <a class="dropdown-item" asp-controller="ConfiguracionEmpresa" asp-action="Create">
                                    Crear configuración
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item" asp-controller="ConfiguracionEmpresa" asp-action="Index">
                                    Ver configuraciones
                                </a>
                            </li>

                        </ul>
                    </li>

                    <!-- BACKOFFICE -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-danger fw-bold" href="#" role="button"
                           data-bs-toggle="dropdown">
                            Backoffice
                        </a>
                        <ul class="dropdown-menu">

                            <li>
                                <a class="dropdown-item text-danger" asp-controller="AdminReserva" asp-action="Index">
                                    Panel de reservas
                                </a>
                            </li>

                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="mt-5 mb-3 text-center text-muted">
        <p>&copy; 2024 DentalClinic. Todos los derechos reservados.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
